{% extends 'base.html.twig' %}
{% block body %}
    <div class="container text-center">
        <h1>{{ program.title }}</h1>
        <h2 class="text-center">{{ season.description }}</h2>
        <h3 class="my-3">Saison n° {{ season.number }}</h3>
        <ul class="list-group">
            {% for episode in episodes %}
                <li class="list-group-item text-start">
                    <p>{{ episode.title }}</p>
                    <p><span class="text-danger">Description:</span> {{ episode.synopsis }}</p>
                    <a href="{{ path("program_episode_show", {slug: program.slug, seasonNumber: season.number, episode: episode.id}) }}">Voir l'épisode</a>
                </li>
                {% else %}
                <p>Pas d'épisode entré</p>
            {% endfor %}
        </ul>
    </div>
{% endblock %}