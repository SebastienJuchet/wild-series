{% extends 'base.html.twig' %}
{% block body %}
    <div class="container text-center">
        <h1>{{ program.title }}</h1>
        <h2 class="text-center">{{ season.description }}</h2>
        <ul class="list-group">
            {% for episode in episodes %}
                <li class="list-group-item text-start">
                    <p>{{ episode.title }}</p>
                    <p><span class="text-danger">Description:</span> {{ episode.synopsis }}</p>
                </li>
                {% else %}
                <p>Pas d'épisode entré</p>
            {% endfor %}
        </ul>
    </div>
{% endblock %}